<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rect_att_report">
                <CheckBox
                    android:id="@+id/checkbox_company_invoice_rep"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/rect_att_report"/>

                <TextView
                    android:id="@+id/txt_Cname_invoice_rep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:layout_centerInParent="true"
                    android:textColor="#FFFFFF"
                    android:layout_toRightOf="@id/checkbox_company_invoice_rep"/>
            </RelativeLayout>

            <ListView
                android:id="@+id/listview_invoice_rep"
                android:layout_below="@id/checkbox_company_invoice_rep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>