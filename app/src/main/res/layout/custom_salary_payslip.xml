<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_payslip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jyothish"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/palyslip_margin_left"
        android:textColor="@color/text_apprence"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/txt_payslip_des"
        android:layout_below="@id/txt_payslip_name"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/palyslip_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FelowShip"
        android:textColor="@color/text_apprence"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/txt_payslip_compny"
        android:layout_below="@id/txt_payslip_des"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/palyslip_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bridgeit"
        android:textColor="@color/text_apprence"
        android:textSize="13dp"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:id="@+id/checkbox_payslip"
        android:layout_below="@id/txt_payslip_name"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>